---
logged: false
---
<main class="primary col-md-9">
    <h1 class="page-heading">Login</h1>
    <form action="/login_generic?came_from=/user/logged_in" method="post" class="form-horizontal login-form">
        <div class="form-group">
            <label class="col-sm-2" for="field-login">Username</label>
            <div class="col-sm-10">
                <input id="field-login" class="form-control" name="login" value="" placeholder="" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="field-password">Password</label>
            <div class="col-sm-10">
                <input id="field-password" class="form-control" name="password" value="" placeholder="" type="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <div class="checkbox">
                    <label class="checkbox" for="field-remember">
                        <input id="field-remember" name="remember" value="63072000" checked="" type="checkbox">
                        Remember me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group form-actions">
            <div class="col-sm-10 col-sm-offset-2">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </div>
    </form>
</main>
<aside class="secondary col-md-3">
    <section class="panel panel-default">
        <h2 class="panel-heading h5">Need an Account?</h2>
        <div class="panel-body">
            <p>Then sign right up, it only takes a minute.</p>
            <p class="action"> <a class="btn btn-default" href="/user/register">Create an Account</a> </p>
        </div>
    </section>
    <section class="panel panel-default">
        <h2 class="panel-heading h5">Forgotten your password?</h2>
        <div class="panel-body">
            <p>No problem, use our password recovery form to reset it.</p>
            <p class="action"> <a class="btn btn-default" href="/user/reset">Forgot your password?</a> </p>
        </div>
    </section>
</aside>
